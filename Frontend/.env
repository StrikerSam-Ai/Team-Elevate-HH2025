# API Configuration
REACT_APP_API_URL=http://localhost:8000

# Application Info
REACT_APP_NAME=HackHazard
REACT_APP_DESCRIPTION=Community-driven platform for disaster preparedness and response
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development

# Feature Flags
REACT_APP_FEATURES_BLOCKCHAIN=true
REACT_APP_FEATURES_VOICE_COMMANDS=false
REACT_APP_FEATURES_COMPANION_CHAT=true
REACT_APP_FEATURES_FAMILY_CONNECTION=true
REACT_APP_FEATURES_WELLNESS_TRACKING=true

# Authentication
REACT_APP_AUTH_TOKEN_EXPIRY=3600
REACT_APP_REFRESH_TOKEN_EXPIRY=604800

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=50

# Timeouts
REACT_APP_TOAST_DURATION=5000
REACT_APP_IDLE_TIMEOUT=1800000
REACT_APP_TOKEN_REFRESH_INTERVAL=900000

# Groq API KEY (Replace with your actual API key)
GROQ_API_KEY=your_groq_api_key_here